{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login')}}" method="post">
        <div class="form-group">
            <input placeholder="Email" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="password" required name="_password" type="password" class="form-control">
        </div>
        <div>
            <button type="submit" class="btn btn-default">Login</button>
            <a href="{{ path('security_registration') }}" class="btn btn-primary">Register</a>
        </div>      
    </form>
{% endblock %}
